<!-- This is a partial -->

<% if @song.errors.any? %>

  <div class="errors_explanation">
    <h4>These errors prevented song creation:</h4>
    <ul>

      <% @song.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>

    </ul>
  </div>

<% end %>

<%= form_for(@song) do |f| %>

  <%= f.label :title %><br>
  <%= f.text_field :title %><br></br>
  <%= f.label :artist_name %><br>
  <%= f.text_field :artist_name %><br></br>

  <%= f.label :released %>
  <%= f.check_box :released %><br></br>

  <%= f.label :release_year %><br>
  <%= f.text_field :release_year %><br></br>
  <%= f.label :genre %><br>
  <%= f.text_field :genre %><br></br>
  <%= f.submit %>

<% end %>
