<%= form_for @song do |f|%>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>

      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :released %>
    <%= f.check_box :released %>
  </p>
  <p>
    <%= f.label :release_year %>
    <%= f.number_field :release_year %>
  </p>
  <p>
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
  </p>
  <p>
    <%= f.label :genre %>
    <%= f.text_field :genre %>
  </p>
  <%= f.submit %>
<% end %>