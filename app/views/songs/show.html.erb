<h1><%= @song.title %></h1>
<h2>by <%= @song.artist_name %></h2>

<ul>
  <li>
    <% if @song.released %>
      Released: <%= @song.release_year %>
    <% else %>
      Not released
    <% end %>
  </li>
  <li>Genre: <%= @song.genre %></li>
</ul>

<%= link_to "Edit", edit_song_path(@song) %> |
<%= link_to "Delete", @song, method: :delete, data: {
  confirm: "Are you sure you want to delete?" } %>
