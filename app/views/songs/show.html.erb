<h1><%= @song.title %></h1>
<h3><%= @song.artist_name %></h3>
<% if @song.released %>
  <p>Release Year: <%= @song.release_year %></p>
<% else %>
  <p>Unreleased Song</p>
<% end %>
<p>Genre: <%= @song.genre %></p>



<%= form_tag @song, method: "delete" do %>
  <%= submit_tag "Delete #{@song.title}" %>
<% end %>