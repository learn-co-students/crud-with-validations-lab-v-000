<h2><%= @song.title %> - <%= @song.artist_name %></h2>

<ul>
  <% if @song.released %>
    <li>Release Year: <%= @song.release_year %></li>
  <% end %>
  <li>Genre: <%= @song.genre %></li>
</ul>

<%= link_to "Edit", edit_song_path(@song) %>
<%= link_to "Delete", @song, method: :delete, data: { confirm: "Are you sure?" } %>
