<h1><%= @song.title %></h1>

<table border="1">
  <thead>
    <tr>
      <th>Title</th>
      <th>Released?</th>
      <th>Release Year</th>
      <th>Artist Name</th>
      <th>Genre</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @song.title %></td>
      <% if @song.released? %>
        <td>Yes</td>
      <% else %>
        <td>No</td>
      <% end %>
      <td><%= @song.release_year %></td>
      <td><%= @song.artist_name %></td>
      <td><%= @song.genre %></td>
      <td>
        <%= link_to 'Edit', edit_song_path(@song) %>
        <%= link_to 'Delete', @song, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  </tbody>
</table>
