<h1><%= @song.title %></h1>
<h3>Artist: <%= @song.artist_name %></h3>
<h3>Genre: <%= @song.genre %></h3>
<% if @song.released %>
  <h3>Released: Yes</h3>
  <h3>Release Year: <%= @song.release_year %></h3>
<% else %>
  <h3>Released: No</h3>
<% end %>

<%= link_to "Edit Song", edit_song_path(@song.id) %>

<br><br>

<%= form_tag song_path(@song.id), method: "delete" do %>
  <%= submit_tag "Delete #{@song.title}" %>
<% end %>

<br>

<%= link_to "All Songs", songs_path %>
