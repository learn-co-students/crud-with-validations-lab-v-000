<!-- app/views/songs/show.html.erb //-->
<h1><%= @song.title %> by <%= @song.artist_name %></h1>

<% if @song.released? %>
  <p> Released in <%= @song.release_year %> </p>
<% end %>

<p>
  Genre: <%= @song.genre %>
</p>

<%= link_to 'Edit', edit_song_path(@song) %>

<br><br>
<%= form_tag song_path(@song.id), method: "delete" do %>
  <%= submit_tag "Delete #{@song.title} by #{@song.artist_name}" %>
<% end %>
