          <%= f.label :released %>
          <%= f.check_box :released %>
        </p>
        <p>
          <% if :released %>
            <%= f.label :release_year %>
            <%= f.number_field :release_year %>
          <% end %>
        </p>
        <p>
          <%= f.label :artist_name %>
          <%= f.text_field :artist_name %>
        </p>
        <p>
          <%= f.label :genre %>
          <%= f.text_field :genre %>
        </p>
        <%= f.submit %>
        <% end %>
