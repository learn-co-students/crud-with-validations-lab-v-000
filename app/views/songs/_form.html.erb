<%= form_for(@song) do |f|%>

<% if @song.errors.any? %>
  <div id="error_explanation">
  <h2>There were some errors:</h2>
  <ul>
    <%@song.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
  </ul>
  </div>
<% end %>

<div>
  <%= f.label :title %> 
  <%= f.text_field :title %> 
</div>
</br>
<div>
  <%= f.label :released %> 
  <%= f.check_box :released, {}, true, false %> 
</div>
</br>
<div>
  <%= f.label :release_year %> 
  <%= f.text_field :release_year %> 
</div>
</br>
<div>
  <%= f.label :artist_name %> 
  <%= f.text_field :artist_name %> 
</div>
</br>
<div>
  <%= f.label :genre %> 
  <%= f.text_field :genre %> 
</div>
</br>
<%= f.submit %>
<% end %>