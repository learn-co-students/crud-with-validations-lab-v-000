<%= form_for(@song) do |f| %>
  <!-- Errors -->
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@song.errors.count, "error") %></h2>

      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if @song.errors[:title].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div><br>

  <% if @song.errors[:released].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
    <%= f.label :released %>
    <%= f.check_box :released %>
  </div><br>

  <% if @song.errors[:release_year].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
    <%= f.label :release_year %>
    <%= f.number_field :release_year %>
  </div><br>
    
  <% if @song.errors[:artist_name].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
  </div><br>
    
  <% if @song.errors[:genre].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
    <%= f.label :genre %>
    <%= f.text_field :genre %>
  </div><br>

  <%= f.submit %>

<% end %>