<%= form_for(@song) do |f| %>
<% if @song.errors.any? %>
    <div id="error_explanation">
      <h3>There were some errors:</h3>
      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= :title %><br>
    <%= f.text_field :title %><br>
  </div>

  <div class="field">
    <%= :release_year %><br>
    <%= f.number_field :release_year %><br>
  </div>

  <div class="field">
    <%= :released %><br>
    <%= f.check_box :released %><br>
  </div>

  <div class="field">
    <%= :genre %><br>
    <%= f.text_field :genre %><br>
  </div>

  <div class="field">
    <%= :artist_name %><br>
    <%= f.text_field :artist_name %><br>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
