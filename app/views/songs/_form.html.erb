<%= form_for(@song) do |f| %>
   <div>
       <%= f.label :title %> <br>
       <%= f.text_field :title %>
   </div>

   <div>
        <%= f.label :released %> <br>
        <%= f.check_box :released %>
   </div>

   <div>
        <%= f.label :release_year %> <br>
        <%= f.number_field :release_year %>
   </div>

   <div>
        <%= f.label :genre %> <br>    
        <%= f.text_field :genre %>
   </div>

   <div>
        <%= f.label :artist_name %> <br>
        <%= f.text_field :artist_name %>
   </div>

   <div>
       <%= f.submit%>
   </div>
<% end %>