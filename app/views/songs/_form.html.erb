<%= form_for(@song) do |f| %>

  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@song.errors.count, "error") %> prohibited this song from being saved:</h2>
      <ul>
        <% @song.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
  <%= f.label :title %>:<br>
  <%= f.text_field :title %>

  <div class="field">
    <%= f.label :release_year %>:<br>
    <%= f.text_field :release_year %>
  </div>

  <div class="field">
    <p>Released:</p>
    <%= f.radio_button :released, 1, :checked => true %>
    <%= f.label :released, "true" %>
    <%= f.radio_button :released, 0 %>
    <%= f.label :released, "false" %>
  </div>

  <div class="field">
    <%= f.label :genre %>:<br>
    <%= f.text_field :genre %>
  </div>

  <div class="field">
    <%= f.label :artist_name %>:<br>
    <%= f.text_field :artist_name %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
