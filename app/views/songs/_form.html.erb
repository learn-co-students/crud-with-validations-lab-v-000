<%= form_for(@song) do |f| %>
  <div class="field">
    <%= f.label :title, "Title:" %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :artist_name, "Artist:" %>
    <%= f.text_field :artist_name %>
  </div>

  <div class="field">
    <%= f.label :genre, "Genre:" %>
    <%= f.text_field :genre %>
  </div>

  <div class="field">
    <%= f.label :released, "Released?" %>
    <%= f.check_box :released %>
  </div>

  <div class="field">
    <%= f.label :release_year, "Release Year:" %>
    <%= f.number_field :release_year %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>