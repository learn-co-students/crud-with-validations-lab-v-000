
  <h2>Song Form:</h2>


<%= form_for @song do |f| %>

<% if @song.errors.any?%>
  <div class="error explanation">
   <% @Song.errors.full_messages.each do |msg| %>
   <ul>
     <li> <%= msg %> </li>
   </ul>

   <% end %>
   </div>
<% end  %>


  <%= f.label :title %>
  <%= f.text_field :title %>
<p>
  <%= f.label :genre %>
  <%= f.text_field :genre %>
  </p>

<p>
  <%= f.label :released %>
  <%= f.check_box :released %>
  </p>

<p>
  <%= f.label :release_year %>
  <%= f.number_field :release_year %>
  </p>

<p>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  </p>

  <%= f.submit %>
<% end %>
