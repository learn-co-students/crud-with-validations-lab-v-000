<%= form_for(@song) do |f| %>
  <% if @song.errors.any? %>
    <% @song.errors.full_messages.each do |message| %>
      <ul>
        <li><%= message %></li>
      </ul>
    <% end %>
  <% end %>

  <div class="form_field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form_field">
    <%= f.label :released %>
    <%= f.check_box :released %>
  </div>
  <div class="form_field">
    <%= f.label :release_year %>
    <%= f.number_field :release_year %>
  </div>
  <div class="form_field">
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
  </div>
  <div class="form_field">
    <%= f.label :genre %>
    <%= f.text_field :genre %>
  </div>
  <div class="submit">
    <%= f.submit %>
  </div>

<% end %>
