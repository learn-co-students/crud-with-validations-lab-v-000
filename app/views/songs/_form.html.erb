<%= form_for @song do |f| %>

	<% if @song.errors.any? %>
		<p>Something went wrong.</p>

		<ul>
			<% @song.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>
	
	<div>
		<%= f.label :title %>
		<%=	f.text_field :title %>
	</div>

		<div>
			<%= label :released, "Released"%>
			<%if current_page?(new_song_path) %>
			  <%= f.text_field :released %>
			<% else %>
				<%= f.check_box :released %>
			<% end %>
		</div>
	
	<div>
		<%= f.label :release_year %>
		<%=	f.number_field :release_year %>
	</div>

	<div>
		<%= f.label :artist_name %>
		<%= f.text_field :artist_name %>
	</div>

	<div>
		<%= f.label :genre %>
		<%= f.text_field :genre %>
	</div>

	<div>
		<%= f.submit %>
	</div>
<% end %>