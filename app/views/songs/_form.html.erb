<%= form_for(@song) do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explaination">
      <h2><%= pluralize(@song.errors.count, "error") %> prevented this song from being saved:</h2>
      <ul>
        <% @song.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :artist_name %><br>
    <%= f.text_field :artist_name %>
  </div>

  <div class="field">
    <%= f.label :genre %><br>
    <%= f.text_field :genre %>
  </div>

  <div class="checkbox">
    <%= f.label :released %><br>
    <%= f.check_box :released, {}, "true", "false" %>
  </div>

  <div class="field">
    <%= f.label :release_year %><br>
    <%= f.text_field :release_year %>
  </div>

  <div class="actions">
    <%= f.submit submit_button_text %>
  </div>


<% end %>
