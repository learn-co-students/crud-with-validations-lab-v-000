<%= form_for @song do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@song.errors.count, "error") %>
        prohibited this post from being saved:</h3>
        <ul><% @song.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
  <% end %>
  <%= f.label :title %>
  <%= f.text_field :title %><br></br>
  <%= f.label :released %>
  <%= f.check_box :released %><br></br>
  <%= f.label :release_year %>
  <%= f.text_field :release_year %><br></br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %><br></br>
  <%= f.label :genre %>
  <%= f.text_field :genre %><br></br>
  <%= f.submit "Save Song" %>
<% end %><br></br>
<%= link_to 'Back', songs_path  %>
