<%= form_for @song do |f| %>

  <% if @song.errors.any? %>
    <h2>There were some errors:<h2>
      <ul>
      <% @song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :released %>
    <%= f.check_box :released %>
  </div>
  <div class="field">
    <%= f.label :release_year %>
    <%= f.number_field :release_year %>
  </div>
  <div class="field">
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
  </div>
  <div class="field">
    <%= f.label :genre %>
    <%= f.text_field :genre %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>