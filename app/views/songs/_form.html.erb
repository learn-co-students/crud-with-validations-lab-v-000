<%= form_for @song do |f| %>
<% if @song.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@song.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>

    <ul>
    <% @song.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>



 <div class="song">
  <%= f.label :title %><br>
  <%= f.text_field :title %>
 </div>

  <div class="song">
  <%= f.label :released %>
  <%= f.check_box :released %>
 </div>

  <div class="song">
  <%= f.label :release_year %>
  <%= f.number_field :release_year %>
 </div>

  <div class="song">
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
</div>

  <div class="song">
  <%= f.label :genre %>
  <%= f.text_field :genre %>
</div>
  <div class="actions">
  <%= f.submit %>
  </div>
<% end %>
