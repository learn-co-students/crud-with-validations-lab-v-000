<%= form_for(@song) do |f| %>

  <% if @song.errors.any? %>
    <div id="error_explanation">
    <h2>There were some errors:</h2>
    <ul>
      <% @song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field<%= ' field_with_errors' if @song.errors[:title].any? %>">
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
  </div>

  <div class="field<%= ' field_with_errors' if @song.errors[:artist_name].any? %>">
    <%= f.label :artist_name, :artist %><br>
    <%= f.text_field :artist_name %><br>
  </div>

  <div class="field<%= ' field_with_errors' if @song.errors[:genre].any? %>">
    <%= f.label :genre %><br>
    <%= f.text_field :genre %><br>
  </div>

  <div class="field<%= ' field_with_errors' if @song.errors[:released].any? %>">
    <%= f.label :released %><br>
    <%= f.check_box :released, checked: @song.released? %><br>
  </div>

  <div class="field<%= ' field_with_errors' if @song.errors[:release_year].any? %>">
    <%= f.label :release_year %><br>
    <%= f.number_field :release_year %><br>
  </div>

  <%= f.submit %>
<% end %>
