<%= form_for @song do |f| %>
  <% if song.errors.any? %>
    <div id="error_explanation">
      <h2> There were errors some errors: </h2>

        <ul>
          <% song.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>    
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %><br><br>
  </div>
  <div class="field">
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %><br><br>
  </div>
  <div class="field">
    <%= f.label :genre %>
    <%= f.text_field :genre %><br><br>
  </div>
  <div class="field">
    <%= f.label "Released?" %>
    <%= f.check_box :released %><br><br>
  </div>
  <div class="field">
    <%= f.label :release_year %>
    <%= f.number_field :release_year %><br><br>
  </div>
  <div class="action">
    <%= f.submit %>
  </div>
<% end %>