<%= form_for(@song) do |f| %>
<% if @song.errors.any? %>
<div id="error_explanation">
	<h2>There were some errors</h2>
 <ul>
  <% @song.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
</div>
<%end%>
<div class="field<%= ' field_with_errors' if @song.errors[:title].any? %>">
	<%= f.text_field :title, :value => @song.title %>
</div>
<div class="field">
	<%=f.text_field :artist_name, :value => @song.artist_name%>
</div>
<div class="field">
	<%=f.text_field :genre, :value => @song.genre%>
</div>
<div class="field">
  <%= f.label "Released?" %> <br/>
  <%= f.check_box :released, {}, true, false %> <br/>
 </div>
 <div class="field">
 	<%=f.label "Release Year" %>
 	<%=f.text_field :release_year, :value => @song.release_year%>
 </div>

<%= f.submit "Update" %>
<% end %>
