
<%= form_for(@song) do |f| %>
  <% if @song.errors.any? %>
	<ul>
		<% @song.errors.full_messages.each do |msg|%>
			<li><%msg%></li>
	</ul>
	<%end%>
		
	<% end %>
	<div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

	<div class="field">
    <%= f.label :released? %><br>
    <%= f.check_box :released? %>
  </div>

	<div class="field">
    <%= f.label :release_year %><br>
    <%= f.number_field :release_year %>
  </div>

	<div class="field">
    <%= f.label :genre %><br>
    <%= f.text_field :genre %>
  </div>

		<div class="field">
    <%= f.label :artist_name %><br>
    <%= f.text_field :artist_name %>
  </div>
	<div class="actions">
  <%= f.submit %>
	</div>
<% end %>