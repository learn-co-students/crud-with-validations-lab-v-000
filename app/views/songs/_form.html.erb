<%= form_for(@song) do |f| %>

  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@song.errors.count, "error") %>
        prohibited this post from being saved:
      </h2>

      <ul>
      <% @song.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, placeholder: "song name" %><br>
    <%= f.label :artist_name %><br>
    <%= f.text_field :artist_name, placeholder: "artist name" %><br>
    <%= f.label :genre %><br>
    <%= f.text_field :genre %><br>

    <br><br>
    <%= f.label :released %><br>
    <%= f.check_box :released %><br>

    <!-- <%= f.label :released %><br>
    <%= f.label :released, "Yes", :value => true  %>
    <%= f.radio_button :released, true %>
    <%= f.label :released, "No", :value => false  %>
    <%= f.radio_button :released, false, :checked => true %> -->


    <br><br>

    <%= f.label :release_year %><br>
    <%= f.number_field :release_year %>
  </div>

  <br><br>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
