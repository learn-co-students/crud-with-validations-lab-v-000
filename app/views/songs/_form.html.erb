<%= form_for @song do |f| %>
    <% if @song.errors.any? %>
        <div id="error_expanation">
            <h2> <%= pluralize(@song.errors.count, "error") %>
            prohibited this song from being saved: </h2>
            <ul>
                <% @song.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <p>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :artist_name, "Artist" %>
        <%= f.text_field :artist_name %>
    </p>

    <p>
        <%= f.label :genre %>
        <%= f.text_field :genre %>
    </p>

    <p>
        <%= f.label :released?, "Check if song has been released"%>
        <%= f.check_box :released? %>
    </p>

    <p>
        <%= f.label :release_year %>
        <%= f.text_field :release_year %>
    </p>

    <%= f.submit %>

<% end %>
