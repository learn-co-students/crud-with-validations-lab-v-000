<%= form_for(@song) do |f| %>
  <% if @song.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@song.errors.count, 'error') %>:</h2>
    <ul>
      <% @song.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <% @fields.each do |k, v| %>
    <div class="field<%= ' field_with_errors' if @song.errors[k].any? %>">
      <%= f.label k %>: <%= f.send(v, k) %>
    </div>
  <% end %>

  <div>
    <%= f.submit %>
  </div>
<% end %>