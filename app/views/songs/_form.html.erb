<%= form_for(@song) do |f| %>

  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>
      <ul>
        <% @song.errors.full_messages.each do |message| %>
        <li><p><%= message %></p></li>
        <% end %>
      </ul>
    </div> <!-- end error_explanation -->
  <% end %>

    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div> <!-- end field -->

    <div class="field">
      <%= f.label :released %>
      <%= f.check_box :released %>
    </div> <!-- end field -->

    <div class="field">
      <%= f.label :release_year %>
      <%= f.number_field :release_year %>
    </div> <!-- end field -->

    <div class="field">
      <%= f.label :genre %>
      <%= f.text_field :genre %>
    </div> <!-- end field -->

    <div class="field">
      <%= f.label :artist_name %>
      <%= f.text_field :artist_name %>
    </div> <!-- end field -->

    <div class="actions">
      <%= f.submit %>
    </div> <!-- end actions -->
<% end %>
