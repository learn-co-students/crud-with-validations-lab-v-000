<%= form_for(@song) do |f| %>
  <% if @song.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@song.errors.count, 'error') %>:</h2>
    <ul>
      <% @song.errors.full_messages.each do |m| %>
      <li><%= m %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <% @fields.each do |key, value| %>
    <div class="field<%= ' field_with_errors' if @song.errors[key].any? %>">
      <%= f.label(key) %>: <%= f.send(value, key) %>
    </div>
  <% end %>

  <div>
    <%= f.submit %>
  </div>
<% end %>
