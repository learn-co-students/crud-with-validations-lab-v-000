<%= form_for @song do |f| %>

  <% if @song.errors.any? %>
    <div class="error_explanation">
      <h3>Your song could not be saved:</h3>
      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :title %>:
    <%= f.text_field :title %><br>
  </div>

  <div class="field">
    <%= f.label :released %>
    <%= f.check_box :released, {}, "true", "false" %><br>
  </div>

  <div class="field">
    <%= f.label :release_year %>:
    <%= f.number_field :release_year %><br>
  </div>

  <div class="field">
    <%= f.label :artist_name %>:
    <%= f.text_field :artist_name %><br>
  </div>

  <div class="field">
    <%= f.label :genre %>:
    <%= f.text_field :genre %><br>
  </div>

    <%= f.submit %>
<% end %>