<%= form_for @song do |f| %>

  <% if @song.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@song.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>

    <ul>
    <% @song.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field <%= ' field_with_errors' if @song.errors[:title].any? %>">
    <%= f.label :title, "Song Title: " %>
    <%= f.text_field :title %>
  </div>
  <br>
  <div class="field <%= ' field_with_errors' if @song.errors[:released].any? %>">
    <%= f.label :released, "Released? " %>
    <%= f.check_box :released %>
    <!-- <%= f.select :released, [['True', true], ['False', false]] %> -->
  </div>
  <br>
  <div class="field <%= ' field_with_errors' if @song.errors[:release_year].any? %>">
    <%= f.label :release_year, "Release Year: " %>
    <%= f.text_field :release_year %>
  </div>
  <br>
  <div class="field <%= ' field_with_errors' if @song.errors[:artist_name].any? %>">
    <%= f.label :artist_name, "Artist Name: " %>
    <%= f.text_field :artist_name %>
  </div>
  <br>
  <div class="field <%= ' field_with_errors' if @song.errors[:genre].any? %>">
    <%= f.label :genre, "Genre Name: " %>
    <%= f.text_field :genre %>
  </div>
  <br><br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
