<h3> Edit Form </h3>

<%= form_for(@song) do |f| %>
<% if @song.errors.any? %>
<div id="errors_explanation">
  <h2> There were some errors: </h2>
    <ul>
      <% @song.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <%end%>
    </ul>
  </div>
<% end %>

<div id="field <% 'field_with_errors' if @song.errors[:title].any? %>">
<%=f.label :title %>
<%= f.text_field :title %>
</div>

<div id="field <% 'field_with_errors' if @song.errors[:released].any? %>">
<%= f.label :released%>
<%= f.check_box :released %>
</div>

<div id="field <% 'field_with_errors' if @song.errors[:release_year].any? %>">
  <%=f.label :release_year %>
  <%= f.number_field :release_year %>
</div>

<div id="field <% 'field_with_errors' if @song.errors[:artist_name].any? %>">
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
</div>

<div id="field <% 'field_with_errors' if @song.errors[:genre].any? %>">
  <%= f.label :genre %>
  <%= f.text_field :genre %>
</div>

<div class="actions">
<%= f.submit %>
</div>
<% end %>
