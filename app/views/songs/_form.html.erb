<%= form_for(@song) do |f| %>

  <% if @song.errors.any? %>
    <div class="error_explanation">
      <h2>There were some errors: </h2>
      <ul>
        <% @song.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>  

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
  </div>
  
  <div class="field">
    <%= f.label :released %><br>
    <%= f.check_box :released %><br>
  </div>

  <div class="field">
    <%= f.label :release_year %><br>
    <%= f.number_field :release_year %><br>
  </div>

  <div class="field">
    <%= f.label :artist_name %><br>
    <%= f.text_field :artist_name %><br>
  </div>

  <div class="field">
    <%= f.label :genre %><br>
    <%= f.text_field :genre %><br>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
