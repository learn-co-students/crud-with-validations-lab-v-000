  <div class=<%= @song.errors[:artist_name].empty? ? "field" : "field_with_errors" %>>
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
  </div>

  <div class=<%= @song.errors[:genre].empty? ? "field" : "field_with_errors" %>>
    <%= f.label :genre %>
    <%= f.text_field :genre %>
