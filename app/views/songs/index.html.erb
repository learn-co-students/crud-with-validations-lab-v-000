<h2>Songs:</h2>

<table>
  <thead>
    <th>Title</th>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.title %></td>
        <td>
          <%= link_to 'Show', song_path(song) %>
          <%= link_to 'Edit', edit_song_path(song) %>
          <%= link_to 'Delete', song, method: :delete, 
            data: { confirm: 'Are you sure you want to delete this song?' } 
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
