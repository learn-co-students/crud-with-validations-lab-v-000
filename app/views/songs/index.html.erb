<h1>Songs</h1>
<%= link_to "Create a new song", new_song_path %>
<br><br>
<div>
  <label for="">Current Songs:</label>
  <table>
    <thead>
      <tr>
        <th>Title: </th>
        <th>Year: </th>
        <th>Artist: </th>
        <th>Genre: </th>
      </tr>
    </thead>

    <tbody>
      <% @songs.each do |song| %>
        <tr>
          <td><%= song.title %></td>
          <td><%= song.release_year %></td>
          <td><%= song.artist_name %></td>
          <td><%= song.genre %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
