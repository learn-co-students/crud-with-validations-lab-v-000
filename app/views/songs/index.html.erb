<h1>Songs</h1>

<p><%= link_to 'Create Song', new_song_path %></p>

<table>
  <thead>
    <tr>
      <th>Song Title</th>
      <th>Artist Name</th>
      <th>Year Released</th>
      <th>Song Genre</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr style="text-align: center;">
        <td><%= song.title %></td>
        <td><%= song.artist_name %></td>
        <td><%= song.release_year %></td>
        <td><%= song.genre %></td>
        <td><%= link_to 'Show', song %>
            <%= link_to 'Edit', edit_song_path(song) %>
            <%= link_to 'Delete', song, method: :delete, data: { confirm: 'You sure, bro?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>