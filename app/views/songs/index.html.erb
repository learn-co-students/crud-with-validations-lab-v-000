<h1>Songs!</h1>

<table style="width:100%">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="2">Name</th>
    </tr>
  </thead>
  <tbody>
    <% @songs.each do |song| %>
    <tr>
      <td><%= link_to song.title, song_path(song)%></td>
      <td><%= song.artist_name %></td>
      <td><%= link_to "Delete", song, method: :delete, date: { confirm: "Are you sure?"}%></td>
    <tr>
    <% end %>
  </tbody>
</table>
