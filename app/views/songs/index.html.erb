<h1>All Songs</h1>

<p><%= link_to "Create New Song", new_song_path %></p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Artist</th>
      <th>Genre</th>
      <th>Year Released</th>
      <th>View Song</th>
      <th>Edit Song</th>
      <th>Delete Song</th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.title %></td>
        <td><%= song.artist_name %></td>
        <td><%= song.genre %></td>
        <td><%= song.release_year %></td>
        <td><%= link_to "View #{song.title}", song_path(song) %></td>
        <td><%= link_to "Edit #{song.title}", edit_song_path(song) %></td>
        <td>
          <%= link_to "Delete #{song.title}", song, method: :delete, data: { confirm: "Are you sure you want to delete this song?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
