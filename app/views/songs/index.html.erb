<h1>Songs</h1>

<div><%= link_to 'Create Song', new_song_path %></div>
<br />

<table>

  <thead>
    <tr>
      <th>| Title | </th>
      <th> Artist | </th>
      <th> Genre | </th>
      <th> Release Year | </th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.title %></td>
        <td><%= song.artist_name %></td>
        <td><%= song.genre %></td>
        <td><%= song.release_year %></td>
        <td>
          <%= link_to 'View', song %> |
          <%= link_to 'Edit', edit_song_path(song) %> |
          <%= link_to 'Delete', "songs/#{song.id}", method: :delete, data: { confirm: 'For real?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

