<h1>All Songs:</h1>

<table>
    <tr>
      <th>Title</th>
      <th>Artist Name</th>
      <th>Genre</th>
      <th>Released</th>
      <th>Year</th>
    </tr>

  <tbody>
    <% @songs.each do |song| %>
    <tr>
      <td><%= link_to song.title, song_path(song) %></td>
      <td><%= song.artist_name %></td>
      <td><%= song.genre %></td>
      <td><%= song.released %></td>
      <td><%= song.release_year %></td>
      <td><%= link_to "Delete", song, method: :delete, data: { confirm: "Are you sure?" } %></td>
      <td><%= link_to "Edit", edit_song_path(song)%></td>
    </tr>
    <% end %>
  </tbody>

</table>
