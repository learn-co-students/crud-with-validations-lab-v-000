<h2>Songs</h2>
<div><%= link_to 'Create Song', new_song_path %></div>
<br>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Released</th>
      <th>Artist name</th>
      <th>Genre</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
         <td><%= song.title %></td>
         <td><%= song.release_year %></td>
         <td><%= song.released %></td>
         <td><%= song.artist_name %></td>
         <td><%= song.genre %></td>
         <td>
            <%= link_to 'View', song %> |
            <%= link_to 'Edit', edit_song_path(song) %> |
            <%= link_to 'Delete', song, method: :delete, data: { confirm: 'For real?' } %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
