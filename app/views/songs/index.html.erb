<style>
table, th, td {
 border: 1px solid black;
} 
</style>

<h1>Songs</h1>

<table>
  <tr>
   <th>Title</th>
   <th>Artist Name</th>
   <th>Genre</th>
   <th>Released</th>
   <th>Year</th>
  </tr>
 <% @songs.each do |song| %>
 <tbody>
  <tr>
   <td><%= link_to song.title, song_path(song) %></td>
   <td><%= song.artist_name %></td>
   <td><%= song.genre %></td>
   <td><%= song.released %></td>
   <td><%= song.release_year %></td>
   <td><%= link_to "Delete", song, method: :delete, data: {confirm: "Are you sure you want to delete this song?"}%></td>
   <td><%= link_to "Edit", edit_song_path(song)%></td>
  </tr>
 </tbody>
 <% end %>
</table>
 
