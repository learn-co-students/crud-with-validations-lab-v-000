<h1>Songs</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Artist</th>
      <th>Release Year</th>
      <th>Genre</th>
    </tr>
  </thead>
  <tbody>
  <% @songs.each do |song| %>
    <tr>
      <td><%= link_to song.title, song_path(song) %></td>
      <td><%= song.artist_name %></td>
      <td><%= song.release_year %></td>
      <td><%= song.genre %></td>
      <td><%= link_to "Delete", @song, method: :delete, data: { confirm: "Really?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Create Song', new_song_path %>