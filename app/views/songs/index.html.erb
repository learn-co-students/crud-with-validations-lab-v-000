<h1>Songs</h1>

<%= link_to 'Create Song', new_song_path %><br>


<table>

  <thead>
    <tr>
      <th>Title</th>
      <th>Artist</th>
      <th>Genre</th>
      <th>Release Year</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @songs.each do |song| %>
    <tr>
      <td><%= song.title %></td>
      <td><%= song.artist_name %></td>
      <td><%= song.genre %></td>
      <td><%= song.release_year %></td>
      <td>
        <%= link_to "View", song_path(song) %>
        <%= link_to "Edit", edit_song_path(song) %>
        <%= link_to "Delete", song, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>