<h1>Songs</h1>

<table>
  <thead>
    <th>Title</th>
    <th>Release Year</th>
    <th>Released?</th>
    <th>Genre</th>
    <th>Artist</th>
    <th>Details</th>
    <th>Edit</th>
    <th>Delete</th>
  </thead>
  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.title %></td>
        <td><%= song.release_year %></td>
        <td><%= song.released %></td>
        <td><%= song.genre %></td>
        <td><%= song.artist_name %></td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>