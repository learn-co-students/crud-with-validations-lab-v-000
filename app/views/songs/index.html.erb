<h2>Song List</h2>
<% if @songs.count > 0 %>
    <table>
        <thead>
            <th>Song</th>
        </thead>
        <tbody>
            <% @songs.each do |song| %>
                <tr>
                    <td>
                        <%= link_to song.title, song_path(song) %> <%= link_to "Delete", song, method: :delete, data: { confirm: "Confirm deletion of this song" } %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
<% end %>