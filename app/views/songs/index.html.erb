<h1>Songs</h1>

<div><%= link_to 'New Song', new_song_path %></div>
<br/>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Released?</th>
      <th>Release Year</th>
      <th>Artist Name</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>  
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.title %></td>
        <td><%= song.released ? "yes" : "no" %></td>
        <td><%= song.release_year %></td>
        <td><%= song.artist_name %></td>
        <td><%= song.genre %></td>
        <td><%= link_to 'View', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= button_to 'Delete', song, method: :delete, data: { confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>