<h1>List of Songs</h1>

<div>
    <%= link_to "Create Song", new_song_path %>
</div>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Artist</th>
            <th>Genre</th>
            <th>Year Released</th>
        </tr>
    </thead>

    <tbody>
        <% @songs.each do |song| %>
        <tr>
            <td>song.title</td>
            <td>song.artist_name</td>
            <td>song.genre</td>
            <td>song.year_released</td>
            <td>
                <% link_to "View", song%>
                <% link_to "Edit", edit_song_path(song) %>
                <% link_to "Delete", song, method: :delete, data: { confirm: "Confirm Delete?" } %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>