<h1>Listing Songs</h1>
<%= link_to 'Create a new Song', new_song_path %>
<br>
<br>
<table>
  <tr>
    <th>Title</th>
    <th>Artist</th>
    <th>Released In</th>
    <th>Genre</th>
    <th>Actions</th>
    <th colspan="5"></th>
  </tr>

  <% @songs.each do |song| %>
  <tbody>
    <tr>
      <td><%= song.title %></td>
      <td><%= song.artist_name %></td>
      <td><%= song.release_year %></td>
      <td><%= song.genre %></td>
      <td><%= link_to 'Show', song_path(song) %></td>
      <td><%= link_to 'Edit', edit_song_path(song) %></td>
      <td><%= link_to 'Delete', song,
              method: :delete,
              data: { confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
</tbody>
</table>
