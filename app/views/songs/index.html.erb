<p id="notice"><%= notice %></p>

<h1>List Songs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

<% @songs.each do |song|%>
  <tr><%= link_to(song.title, edit_song_path(song)) %></tr>


        <td><%= link_to 'Show', song %></td>
