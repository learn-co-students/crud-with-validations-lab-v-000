<h1>Songs</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Release Year</th>
      <th>Genre</th>
      <th>Artist</th>
    </tr>
  </thead>

  <tbody>
      <%@songs.each do |song| %>
        <tr>
          <td><%= link_to song.title, song_path(song) %></td>
          <td><%= link_to song.release_year, song_path(song) %></td>
          <td><%= link_to song.genre, song_path(song) %></td>
          <td><%= link_to song.artist_name, song_path(song) %></td>
        </tr>
<%end%>
</tbody>
</table>


<% @songs.each do |song| %>
<div class="song">
  <span><%= song.title%></span>
  <%=link_to "Delete", song, method: :delete, data: {confirm:"Really?"}%>
</div>
<%end%>
