<h1>All Songs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Artist</th>
      <th>Released</th>
      <th>Genre</th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
    <tr>
      <td><%= link_to song.title, song_path(song) %></td>
      <td><%= song.artist_name %></td>
      <td><%= song.released ? song.release_year : "Not released yet" %></td>
      <td><%= song.genre %></td>
      <td>
        <%= link_to "View", song %> |
        <%= link_to "Edit", edit_song_path(song) %> | 
        <%= link_to "Delete", song, method: :delete, data:{confirm: "Really?"} %>
      </td>
    </tr>
    <% end %>
  </tbody>

</table>
