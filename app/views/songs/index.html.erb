<h1>Songs</h1>

<%= link_to "New Song", new_song_path %>

<br><br>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Artist</th>
      <th>Release Year</th>
      <th>Genre</th>
      <th>Delete?</th>
    </tr>
  </thead>
  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= link_to song.title, song_path(song) %></td>
        <td><%= song.artist_name %></td>
        <td><%= song.release_year %></td>
        <td><%= song.genre %></td>
        <td><%= link_to 'Delete', song, method: :delete, data: {:confirm => 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
