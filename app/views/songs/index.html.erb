<h1>All Songs</h1>

<table>
  <tbody>
    <tr>
      <th>Song</th>
      <th>Artist</th>
      <th>Released?</th>
      <th>Release Year</th>
      <th>Genre</th>
    </tr>

  <% @songs.each do |song| %>
    <tr>
      <td><%= link_to song.title, song_path(song) %></td>
      <td><%= song.artist_name %></td>
      <td><%= song.released %></td>
      <td><%= song.release_year %></td>
      <td><%= song.genre %></td>
      <td><%= link_to "Delete", song_path(song), method: :delete, data: { confirm: "Really?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<p><%= link_to "Add Song", new_song_path %></p>
