<h1> Songs </h1>

<%= link_to 'Add Song', new_song_path %>

<table>
 <thead>
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Genre</th>
    <th>Artist</th>
    <td></td>
    </tr>
 </thead>

 <tbody>
  <% @songs.each do |song| %>
  <tr>
    <td><%=song.title%></td>
    <td><%=song.release_year%></td>
    <td><%=song.genre%></td>
    <td><%=song.artist_name%></td>
    <td>
        <%= link_to 'Delete', song, method: :delete, data: { confirm: "Do you really want to delete the selected song?"}%>
    </td>
  </tr>
  <% end %>
 </tbody>
</table>