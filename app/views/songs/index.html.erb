<h1> Songs ! </h1>
<div> <%= link_to 'Create Song', new_song_path %></div>

<table>
    <thead>
        <tr>
        <th>Title</th>
        <th>Release Year</th>
        <th>Arist Name</th>
        <th>Genre</th>
        <th></th>
        </tr>
    </thead>
    
    <tbody>
        <%= @songs.each do |song| %>
        <tr>
          <td><%= song.title %></td>
          <td> <%= song.release_year %> </td>
          <td> <%= song.artist_name %></td>
          <td> <%= song.genre %></td>
          <td> <%= song.released %></td>
          <td>
          <%= link_to 'Edit a Song', song_path(song) %>
          <%=link_to 'Delete', song, method: :delete, data: {confirm: "Are you sure?"}%>
          </td>
      </tr>
      <%end%>
  </tbody>
</table>


