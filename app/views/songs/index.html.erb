<h1>All Songs</h1>

<div>
  <%= link_to 'Create Song', new_song_path %>
</div><br />

<table>
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Genre</th>
    <th>Artist Name</th>
    <th>Actions</th>
  </tr>
  <tbody>
    <%= @songs.each do |song| %>
    <tr>
      <td><%= song.title %></td>
      <td><%= song.release_year %></td>
      <td><%= song.genre %></td>
      <td><%= song.artist_name %></td>
      <td>
        <%= link_to "View", song %>
        <%= link_to "Edit", edit_song_path(song) %>
        <%= link_to "Delete", song, method: :delete, date: { confirm: "Are You Sure?" } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
