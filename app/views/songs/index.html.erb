<h1>Songs</h1>

<p><%= link_to 'Create Song', new_song_path %></p>

<table>
  <thead>
    <tr>
      <th>artist</th>
      <th>title</th>
      <th>genre</th>
      <th>year</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |s| %>
    <tr>
      <td><%= s.artist_name %></td>
      <td><%= s.title %></td>
      <td><%= s.genre %></td>
      <td><%= s.release_year %></td>
      <td><%= link_to 'View', s %> <%= link_to 'Edit', s %> <%= form_tag song_path(s), method: 'delete' do %>
          <%= submit_tag 'Delete' %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
