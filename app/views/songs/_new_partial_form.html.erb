<% if @song.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% @song.errors.full_messages do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@song) do |f| %>
  <div class="field <%= 'field-errors' if @song.errors[:title].any? %>">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field <%= 'field-errors' if @song.errors[:released].any? %>">
    <%= f.label :released %>
    <%= f.check_box :released %>
  </div>
  <div class="field <%= 'field-errors' if @song.errors[:release_year].any? %>">
    <%= f.label :release_year %>
    <%= f.text_field :release_year %>
  </div>
  <div class="field <%= 'field-errors' if @song.errors[:artist_name].any? %>">
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
  </div>
  <div class="field <%= 'field-errors' if @song.errors[:genre].any? %>">
    <%= f.label :genre %>
    <%= f.text_field :genre %>
  </div>
  <%= f.submit %>
<% end %>
