<%=form_for @song do |f|%>
  <div class="field">
    <%=f.label "Title"%><br>
    <%=f.text_field :title%>
  </div>

  <div class="field">
    <%=f.label "Released"%><br>
    <%=f.check_box :released%>
  </div>

  <div class="field">
    <%=f.label "Release Year"%><br>
    <%=f.number_field :release_year%>
  </div>

  <div class="field">
    <%=f.label "Artist Name"%><br>
    <%=f.text_field :artist_name%>
  </div>

  <div class="field">
    <%=f.label "Genre"%><br>
    <%=f.text_field :genre%>
  </div>

  <%=f.submit%>
<%end%>
