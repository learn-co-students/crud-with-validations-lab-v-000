<h1>New Song Form</h1>

<% if @song.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@song.errors.count, "error") %>
      prohibited this song from being saved:
    </h2>

    <ul>
    <% @song.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @song do |f| %>
  <%= f.label :title, "Song Title:" %>
  <%= f.text_field :title %><br>

  <%= f.label :artist_name, "Artist Name:" %>
  <%= f.text_field :artist_name %><br>

  <%= f.label :released, "Released?" %>
  <%= f.check_box :released %><br>

  <%= f.label :release_year, "Release Year:" %>
  <%= f.text_field :release_year %><br>

  <%= f.label :genre, "Genre:" %>
  <%= f.text_field :genre %><br>
  <%= f.submit %>
<% end %>
