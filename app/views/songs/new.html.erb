<%= form_tag songs_path do %>
    <label>Song Title:</label><br/>
    <%= text_field_tag :'song[title]' %><br/>
    <label>Artist:</label><br/>
    <%= text_field_tag :'song[artist]' %><br/>
    <label>Genre:</label><br/>
    <%= text_field_tag :'song[genre]' %><br/>
    <label>Released: </label>
    <%= check_box_tag :'song[released]' %><br/>
    <label>Release Year: </label>
    <%= number_field_tag :'song[release_year]' %><br/>
    <%= submit_tag "Submit Song" %>
<% end %>