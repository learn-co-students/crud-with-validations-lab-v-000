<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Create Song</title>
  </head>
  <h2>Create a new song!</h2>
  <body>
    <%= form_for @song do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %><br>
      <%= f.label :released %>
      <%= f.checkbox %><br>
      <%= f.label :release_year %>
      <%= f.text_field :release_year %><br>
      <%= f.label :artist_name %>
      <%= f.text_field :artist_name %><br>
      <%= f.label :genre %>
      <%= f.text_field :genre %><br>
      <%= f.submit "Create Song" %>
    <% end %>
  </body>
</html>
