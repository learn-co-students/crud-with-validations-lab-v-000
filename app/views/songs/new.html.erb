<h3>Song Form</h3>

<% if @song.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@song.errors.count, "error") %>
    </h2>

    <ul>
    <% @song.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @song do |f| %>
  <%= f.label 'Title' %><br>
  <%= f.text_field :title %><br>
 
  <%= f.label 'Released' %><br>
  <%= f.check_box :released %><br>

  <%= f.label 'Release Year' %><br>
  <%= f.number_field :release_year %><br>

   <%= f.label 'Artist' %><br>
   <%= f.text_field :artist_name %><br>

   <%= f.label 'Genre' %><br>
   <%= f.text_field :genre %><br>
 
  <%= f.submit %>
<% end %>
