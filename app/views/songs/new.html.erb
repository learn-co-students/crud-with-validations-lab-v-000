<h1>Songs#new</h1>
<%= form_for @song do |f|%>
<div class="field">
    <%=f.label :title%><br>
    <%=f.text_field :title%><br>
</div>

<div class="field">
  <%=f.label :released%><br>
  <%=f.check_box :released%><br>
</div>

<div class="field">
  <%=f.label :release_year%><br>
  <%=f.number_field :release_year%><br>
</div>

<div class="field">
  <%=f.label :genre%><br>
  <%=f.text_field :genre%><br>
</div>

<div class="field">
  <%=f.label :artist_name%><br>
  <%=f.text_field :artist_name%><br>
</div>

<div class="action">
  <%=f.submit%>
</div>

<%end%>
