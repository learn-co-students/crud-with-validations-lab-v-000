<% if @song.errors.any? %>
  <div class="error_explanation">
    <h1><%= pluralize(@song.errors.count, "error") + " prevented this from being submitted." %></h1>
    <ul>
      <% @song.errors.full_messages.each do |error_msg| %>
        <li><%= error_msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @song do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>

  <%= f.label :genre %>
  <%= f.text_field :genre %>

  <%= f.label :released %>
  <%= f.check_box :released %>

  <%= f.label :release_year %>
  <%= f.text_field :release_year %>

  <%= f.submit %>
<% end %>