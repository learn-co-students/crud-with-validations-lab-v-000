<h2>Create Song</h2>

<%= form_for @song do |f| %>
  <% if @song.errors.any? %>
     <div id="field_with_errors">
       <h2><%= pluralize(@song.errors.count, "error") %> prohibited this song from being saved:</h2>

       <ul>
       <% @song.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
       </ul>
     </div>
   <% end %>

   <div class="field">
     <%= f.label :title %><br>
     <%= f.text_field :title %>
   </div>
   <div class="field">
     <%= f.label :release_year %><br>
     <%= f.number_field :release_year %>
   </div>
   <div class="field">
     <%= f.label :released %><br>
     Check if true: <%= f.check_box :released, {}, true, false %>
   </div>
   <div class="field">
     <%= f.label :genre %><br>
     <%= f.text_field :genre %>
   </div>
   <div class="field">
     <%= f.label :artist_name %><br>
     <%= f.text_field :artist_name %>
   </div>
   <div class="actions">
     <%= f.submit "Submit" %>
     <%= link_to "go back", songs_path, class: "button small radius secondary" %>
</div>

<% end %>
