<h1>New Song Form</h1>

<% if @song.errors.any? %>
  <div id="error-explanation">
    <h2>
      <%= pluralize(@song.errors.count, "error") %> prohibited this song from being saved:
    </h2>

    <ul>
      <% @song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @song do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
  </div>
  <div class="field">
    <%= f.label :genre %>
    <%= f.text_field :genre %>
  </div>
  <div class="field">
    <%= f.label :release_year %>
    <%= f.text_field :release_year %>
  </div>
  <div class="field">
    <%= f.label :released %>
    <%= f.check_box :released %>
  </div>
  <%= f.submit 'Create Song' %>
<% end %>
