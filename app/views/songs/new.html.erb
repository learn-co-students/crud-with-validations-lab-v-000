<h3>Song Form</h3>

<%= form_for(@song) do |f| %>
  <label>Song title:</label><br>
  <%= f.text_field :title %><br>

  <label>Released?</label><br>
  <%= f.check_box :released, {}, "true", "false" %><br>

   <label>Released year:</label><br>
  <%= f.number_field :release_year %><br>

    <label>Artist name:</label><br>
  <%= f.text_field :artist_name %><br>

  <label>Genre:</label><br>
  <%= f.text_field :genre %><br>

  <%= f.submit %>
<% end %>