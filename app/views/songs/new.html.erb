<%= form_for (@song) do |f| %>
  <% if @song.errors.any? %>
  <div id="error_explain">
    <h2> We found some errors: </h2>
    <ul>
      <% @song.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :released %>
    <%= f.check_box :released %>
  </div>

  <div class="field">
    <%= f.label :release_year %>
    <%= f.number_field :release_year %>
  </div>

  <div class="field">
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
  </div>

  <div class="field">
    <%= f.label :genre %>
    <%= f.text_field :genre %>
  </div>
  <%= f.submit %>
  <% end %> 