<h1>New Song</h1>

<%= form_for(@song) do |f| %>

  <!-- Space for Error Message generation  -->

  <h1><label>Title: </label>
    <%= f.text_field :title %></h1>

  <h1><label>Released? </label>
    <%= f.check_box :released %></h1>

  <h1><label>Release Year:</label>
    <%= f.number_field :release_year %></h1>

  <h1><label>Artist's Name:<label>
    <%= f.text_field :artist_name %></h1>

  <h1><label>Genre: </label>
    <%= f.text_field :genre %></h1>

  <%= f.submit %>
<% end %>
