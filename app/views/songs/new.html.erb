<h1>Create a Song</h1>

<%= form_for(@song) do |t| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>

      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= t.label :title %><br>
    <%= t.text_field :title %>
  </div>
  <div class="field">
    <%= t.label :released %><br>
    <%= t.check_box :released %>
  </div>
  <div class="field">
    <%= t.label :release_year %><br>
    <%= t.number_field :release_year %>
  </div>
  <div class="field">
    <%= t.label :genre %><br>
    <%= t.text_field :genre %>
  </div>
  <div class="field">
    <%= t.label :artist_name %><br>
    <%= t.text_field :artist_name %>
  </div>
  <div class="actions">
    <%= t.submit %>
  </div>
<% end %>
