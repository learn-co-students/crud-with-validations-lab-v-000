<h2>New Song Form</h2>

<%= form_for @song do |f| %>

<p>
  <%= f.label :title %>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :released %>
  <%= f.text_field :released %>
</p>

<p>
  <%= f.label :release_year%>
  <%= f.number_field :release_year %>
</p>

<p>
  <%= f.label :artist_name%>
  <%= f.text_field :artist_name %>
</p>

<p>
  <%= f.label :genre%>
  <%= f.text_field :genre %>
</p>

  <%= f.submit %>

<% end %>
