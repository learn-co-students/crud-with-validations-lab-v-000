<h1>Create a Song</h1>

<%= form_for(@song) do |f| %>
    <% if @song.errors.any? %>
        <div id="error_explanation">
        <h2>
            <%= pluralize(@song.errors.count, "error") %>
            prohibited this song from being saved:
        </h2>
        <ul>
            <% @song.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
        </div>
    <% end %>

    <%= f.label 'title' %><br>
    <%= f.text_field :title %><br>

    <%= f.label 'artist_name' %><br>
    <%= f.text_field :artist_name %><br>

    <%= f.label 'genre' %><br>
    <%= f.text_field :genre %><br>

    <h4>Song Officially Released?</h4>
    <%= f.label 'released?' %> 
    <%= f.check_box :released %><br>

    <%= f.label 'release_year' %><br>
    <%= f.text_field :release_year %><br>

    <br>
    <%= f.submit "Create Song" %>
<% end %>
