<h2>Create a Song</h2>
<%= form_for @song do |f| %>

  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>

      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>Title: <%= f.text_field :title %></p><br />
  <p>Released: <%= f.check_box :released %></p><br />
  <p>Release Year: <%= f.number_field :release_year %></p><br />
  <p>Artist Name: <%= f.text_field :artist_name %></p><br />
  <p>Genre: <%= f.text_field :genre %></p><br />
  <%= f.submit %>
<% end %>


