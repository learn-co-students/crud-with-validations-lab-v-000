<h1>Create Song</h1>

  <%= form_for @song do |f| %>

  <label for="title">Title: </label><%= f.text_field :title %>
  <br>
  <label for="released">Released: </label>
  <%= f.check_box :released %> 
  <br>
  <label for="release_year">Release Year: </label><%= f.number_field :release_year, in: 999..9999 %>
  <br>
  <label for="artist_name">Artist Name: </label><%= f.text_field :artist_name %>
  <br>
  <label for="genre">Genre: </label><%= f.text_field :genre %>
  <br>
  <%= f.submit "Create Song" %>

<%end%>
