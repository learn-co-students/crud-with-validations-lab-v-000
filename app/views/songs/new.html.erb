<h1>Create Song</h1>
<%= form_for @song do |f| %>
  <% if @song.errors.any? %>
    <div id="errror_explanation">
      <h2>There were some errors:</h2>
      <ul>
        <% @song.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    Title: <%= f.text_field :title %>
  </div><br>

  <div class="field">
    Released: <%= f.check_box :released %>
  </div><br>

  <div class="field">
    Year Released: <%= f.text_field :release_year %>
  </div><br>

  <div class="field">
    Artist: <%= f.text_field :artist_name %>
  </div><br>

  <div class="field">
    Genre: <%= f.text_field :genre %>
  </div><br>

  <%= f.submit "Create Song" %>
<% end %>
