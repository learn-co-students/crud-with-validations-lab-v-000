<h2>Create a Song</h2>
<%= form_tag songs_path, method: "post" do %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h3>There were some errors:</h3>
      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if @song.errors[:name].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
    <%= label_tag "title", "Title" %>
    <%= text_field_tag "title", @song.title %>
  </div>

  <% if @song.errors[:email].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
    <%= label_tag "released", "Released" %>
    <%= text_field_tag "released", @song.released %>
  </div>

  <% if @song.errors[:release_year].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
    <%= label_tag "release_year", "Release Year" %>
    <%= text_field_tag "release_year", @song.release_year %>
  </div>

  <% if @song.errors[:artist_name].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
    <%= label_tag "artist_name", "Artist Name" %>
    <%= text_field_tag "artist_name", @song.artist_name %>
  </div>

  <% if @song.errors[:genre].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
    <%= label_tag "genre", "Genre" %>
    <%= text_field_tag "genre", @song.genre %>
  </div>

  <%= submit_tag "Create" %>
<% end %>
