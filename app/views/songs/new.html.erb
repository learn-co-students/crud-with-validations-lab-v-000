<h2>Create a Song</h2>

<%= form_for @song do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2>Womp womp. There were some errors:</h2>
      <ul>
        <% @song.errors.full_messages.each do |m|  %>
        <li><%= m %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :released %>
    <%= f.check_box :released %>
  </div>

  <div class="field">
    <%= f.label :release_year %>
    <%= f.text_field :release_year %>
  </div>

  <div class="field">
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
  </div>

  <div class="field">
    <%= f.label :genre %>
    <%= f.text_field :genre %>
  </div>

  <%= f.submit %>
<% end %>
