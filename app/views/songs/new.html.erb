<h1>New Song Form</h1>

<%= form_for(@song) do |f|%>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>
      <ul>
        <% @song.errors.full_messages.each do |error| %>
          <li> <% error %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :released %>
  <%= f.text_field :released %>
  <br>
    <%= f.label :release_year %>
  <%= f.text_field :release_year %>
  <br>
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
  <br>
    <%= f.label :genre %>
    <%= f.text_field :genre %>
  <br>
  
  <%= f.submit %>



  
<% end %>