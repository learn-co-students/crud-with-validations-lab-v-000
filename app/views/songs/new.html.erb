<h1>Add Song Form</h1>

<%= form_for(@song) do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@song.errors.count, "error") %>
        prohibited this post from being saved:
      </h2>

      <ul>
      <% @song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field<%= ' field_with_errors' if @song.errors[:title].any? %>">
    <strong><%= f.label :title %><br></strong>
    <%= f.text_field :title %>
  </div>

  <div class="field<%= ' field_with_errors' if @song.errors[:released].any? %>">
    <strong><%= f.label :released %><br></strong>
    <%= f.check_box :released %>
  </div>

  <div class="field<%= ' field_with_errors' if
    @song.errors[:release_year].any? %>">
    <strong><%= f.label :release_year %><br></strong>
    <%= f.number_field :release_year %>
  </div>

  <div class="field<%= ' field_with_errors' if @song.errors[:artist_name].any? %>">
    <strong><%= f.label :artist_name %><br></strong>
    <%= f.text_field :artist_name %>
  </div>

  <div class="field<%= ' field_with_errors' if @song.errors[:genre].any? %>">
    <strong><%= f.label :genre %><br></strong>
    <%= f.text_field :genre %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
