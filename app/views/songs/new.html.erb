<h1>Create a New Song</h1>

<%= form_for(@song) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br></br>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %><br></br>

  <%= f.label :genre %>
  <%= f.text_field :genre %><br></br>

  <%= f.label :release_year %>
  <%= f.text_field :release_year %><br></br>

  <%= f.label :released %>
  <%= f.check_box :released, {}, true, false %><br></br>

  <%= f.submit %>
<% end %>
