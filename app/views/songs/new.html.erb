<h1>New Song Form</h1>

<% if @song.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>
      <ul>
        <% @song.errors.full_messages.each do |message|%>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_for(@song) do |f| %>

<label>Song title:</label><br>
<%= f.text_field :title %><br>

<label>Song artist:</label><br>
<%= f.text_field :artist_name %><br>

<label>Song genre:</label><br>
<%= f.text_field :genre %><br>

<label>Song release year:</label><br>
<%= f.number_field :release_year %><br>

<label>Song released?</label><br>
<%= f.check_box :released %><br>


<%= f.submit 'Create Song' %><br>

<% end %>