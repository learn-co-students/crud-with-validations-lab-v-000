<h1>Create a New Song:</h1>
<%= form_for @song do |f| %>
  <% if @song.errors.any? %>
    <div class="field_with_errors">
      <%= @song.errors.full_messages.each do |message| %>
        <ul>
          <li><% message %></li>
        </ul>
      <% end %>
    </div>
  <% end %>
    <p><%= f.label :title %>:
    <%= f.text_field :title %></p>
    <p><%= f.label :artist_name %>:
    <%= f.text_field :artist_name %></p>
    <p><%= f.label :genre %>:
    <%= f.text_field :genre %></p>
    <p><%= f.label :released %>:
    <%= f.check_box :released %></p>
    <p><%= f.label :release_year %>:
    <%= f.number_field :release_year %></p>
    <%= f.submit "Create Song" %>
<% end %>
<br>
<%= link_to 'Go Back to All Songs', songs_path %>
