<h1>Create a Song</h1>

<% if @song.errors.any? %>
  <div id="error_explanation">
    <h2>There were some errors:</h2>

    <ul>
      <% @song.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @song do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :release_year %>
    <%= f.number_field :release_year %>
  </div>

  <div class="field">
    <%= f.label :released %>
    <%= f.check_box :released %>
  </div>

  <div class="field">
    <%= f.label :genre %>
    <%= f.text_field :genre %>
  </div>

  <div class="field">
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
  </div>

  <div class="submit">
    <%= f.submit %>
  </div>
<% end %>
