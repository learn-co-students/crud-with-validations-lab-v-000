<h2>Create a Song</h2>

<%= form_for @song do |f| %>
  <%= label_tag :title %>
  <%= f.text_field :title %> <br>
  <%= label_tag :artist_name %>
  <%= f.text_field :artist_name %> <br>
  <%= label_tag :release_year %>
  <%= f.text_field :release_year %> <br>
  <%= label_tag :genre %>
  <%= f.text_field :genre %> <br>
  <%= label_tag :released, 'Released?' %>
  <%= f.check_box :released, checked: "checked" %>
  <%= f.submit %>
<% end %>