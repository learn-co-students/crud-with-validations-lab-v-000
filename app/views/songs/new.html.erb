<h1>New Song Form</h1>
<%= form_for @song do |f| %>
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %><br>
  <%= f.label :released, "Was the song offically released? (true or false)" %>
  <%= f.check_box :released %><br>
  <%= f.label :release_year, "If so, enter the release year" %>
  <%= f.text_field :release_year %><br>
  <%= f.label :artist_name, "Artist Name" %>
  <%= f.text_field :artist_name %><br>
  <%= f.label :genre, "Genre" %>
  <%= f.text_field :genre %><br>
  <%= f.submit %>
<% end %>
