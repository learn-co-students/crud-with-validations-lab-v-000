<% if @song.errors.any? %>
  <div id="error_explanation">

    <h2>
      <%= pluralize(@song.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>

    <ul>
    <% @song.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>

  </div>
<% end %>

<!-- form-for tag, auto-fills object data and .field_with_errors class -->
<%= form_for @song do |f| %>
  Title:<%= f.text_field :title %><br>
  Released (t/f):<%= f.text_field :released %><br>
  Year:<%= f.text_field :release_year %><br>
  Artist:<%= f.text_field :artist_name %><br>
  Genre:<%= f.text_field :genre %><br>
  <%= f.submit %>
<% end %>
