<h2>Create new song</h2>
<% if @song.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@song.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>

    <ul>
    <% @song.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @song do |f| %>
  <label>Song name: </label><%= f.text_field :title %><br>
  <label>Release? </label><%= f.check_box :released%><br>
  <label>Release year: </label><%= f.number_field :release_year %><br>
  <label>Artist name: </label><%= f.text_field :artist_name %><br>
  <label>Genre:</label><%= f.text_field :genre %><br>
  <%= f.submit %>
<% end %>
