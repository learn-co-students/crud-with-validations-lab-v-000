<% if @song.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@song.errors.count, "error") %>
        Song not saved due to errors:
      </h2>

      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

<%= form_for @song do |f| %>
  <%= f.text_field :title %>
  <%= f.text_field :artist_name %>
  <%= f.text_field :genre %>
  <%= f.check_box :released, {}, true, false %>
  <%= f.text_field :release_year %>
  <%= f.submit "Create Song" %>
<% end %>
