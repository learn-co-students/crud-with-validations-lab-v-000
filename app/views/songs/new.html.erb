<%= form_for(@song) do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2>The following errors occured:</h2>
      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <label>Song Title:</label><br>
  <%= f.text_field :title %><br>

  <label>Released:</label><br>
  <%= f.check_box :released %><br>

  <label>Release Year:</label><br>
  <%= f.text_field :release_year %><br>

  <label>Song Artist:</label><br>
  <%= f.text_field :artist_name %><br>

  <label>Song Genre:</label><br>
  <%= f.text_field :genre %><br>

  <%= f.submit %>
<% end %>
