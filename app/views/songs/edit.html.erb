<h1>Edit Song <%= @song.title %></h1>
<%= form_for @song do |f| %>

  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@song.errors.count, "error") %>
        prohibited this song from being saved:
      </h2>

      <ul>
      <% @song.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.text_field :title %>
  <%= f.check_box :released %><br>
  <%= f.text_field :release_year %><br>
  <%= f.text_field :artist_name %><br>
  <%= f.text_field :genre %><br><br>
  <%= f.submit %>
<% end %>
