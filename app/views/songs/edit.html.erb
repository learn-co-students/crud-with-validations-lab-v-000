<h1>Edit Song</h1>

<% if @song.errors.any? %>
  <h3><%= pluralize(@song.errors.count, "error") %> occured:</h3>
  <% @song.errors.full_messages.each do |msg| %>
    <ul>
      <li><%= msg %></li>
    </ul>
    <% end %>
<% end %>

<%= form_for @song do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :released %>
  <%= f.check_box :released %>

  <%= f.label :release_year %>
  <%= f.text_field :release_year %>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>

  <%= f.label :genre %>
  <%= f.text_field :genre %>

  <%= f.submit %>

<% end %>
