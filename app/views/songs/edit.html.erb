<h2>Song Form</h2>

<%= form_for(@song) do |f| %>
  <label>Song title:</label>
  <%= f.text_field :title %><br><br>

  <label>Release Year:</label>
  <%= f.text_field :release_year %><br><br>

  <label>Check if Released:</label>
  <%= f.check_box :released %><br><br>

  <label>Artist Name:</label>
  <%= f.text_field :artist_name %><br><br>

  <label>Genre:</label>
  <%= f.text_field :genre %><br><br>

  <%= f.submit %>
<% end %>
