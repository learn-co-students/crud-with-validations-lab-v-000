<h2>Song Edit form</h2>

<% if @song.errors.any? %>
  <h3><%= pluralize(@song.errors.count, "error") %> occured:</h3>
  <% @song.errors.full_messages.each do |msg| %>
    <ul>
      <li><%= msg %></li>
    </ul>
  <% end %>
<% end %>

<%= form_for @song do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :released %>
  <%= f.check_box :released %><br>

  <%= f.label :release_year %>
  <%= f.text_field :release_year %><br>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %><br>

  <%= f.label :genre %>
  <%= f.text_field :genre %><br>

  <%= f.submit %>
<% end%>
