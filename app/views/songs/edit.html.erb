<% if @song.errors.any? %>
    <div id="error_explanation">
        <h2>
            <%= pluralize(@song.errors.count, "error") %>
                prevented this song from being saved:
        </h2>
        
        <% @song.errors.full_message each do |msg| %>
            <%= msg %>
        <% end %>
    </div>
<% end %>

<%= form_for(@song) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :released %>
    <%= f.check_box :released %>
    <%= f.label :release_year %>
    <%= f.text_field :release_year %>
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
    <%= f.label :genre %>
    <%= f.text_field :genre %>
    <%= f.submit %>
<% end %>