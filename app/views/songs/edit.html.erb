<h2>Edit Song</h2>

<%= form_for(@song) do |f| %>

  <% if @song.errors.any? %>
    <div id ="error_explanation">
      <h4>ERRORS:</h4>
    
      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <%end%>
      </ul>
    </div>
  <%end%>

  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :released %><br>
    <%= f.check_box :released %>
  </div>

  <div>
    <%= f.label :release_year %><br>
    <%= f.text_field :release_year %>
  </div>

  <div>
    <%= f.label :artist_name %><br>
    <%= f.text_field :artist_name %>
  </div>

  <div>
    <%= f.label :genre %><br>
    <%= f.text_field :genre %>
  </div>

  <div>
    <%= f.submit "Update song" %>
  </div>

<%end%>