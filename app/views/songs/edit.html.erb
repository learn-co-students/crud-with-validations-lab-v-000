<%= form_for(@song) do |f| %>

<% if @song.errors.any? %>
   <div id="error_explanation">
     <h2>There were some errors:</h2>

     <ul>
       <% @song.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
     </ul>
   </div>
 <% end %>

<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :artist_name %>
<%= f.text_field :artist_name %>

<%= f.label :released %>
<%= f.check_box :released %>

<%= f.label :release_year %>
<%= f.number_field :release_year %>

<%= f.label :genre %>
<%= f.text_field :genre %>
<%= f.submit %>
<%end%>
