<h1> Edit Form </h1>

<%= form_for (@song) do |f| %>
    <% if @song.errors.any? %>
        <div id="error_explanation">
        <h2>There were some errors:</h2>

        <ul>
            <% @song.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>

    Title:<%= f.text_field :title %><br/>
    Artist<%= f.text_field :artist_name %><br/>
    Released?<%= f.check_box :released %><br/>
    Release Year:<%= f.number_field :release_year %><br/>
    Genre:<%= f.text_field :genre %><br/>
    <%= f.submit%>
    <% end%>