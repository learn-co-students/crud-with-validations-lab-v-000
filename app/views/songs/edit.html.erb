<% if @song.errors.any? %>
  <div id="error_explanation">
    <h2>There were some errors: <%= pluralize(@song.errors.count, "error") %> prohibits this song from being saved.
    </h2>
    <ul>
      <% @song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <%= form_for @song do |f| %>
    <%= f.text_field :title %>
    <%= f.check_box :released %>
    <%= f.number_field :release_year %>
    <%= f.text_field :artist_name %>
    <%= f.text_field :genre %>
    <%= f.submit %>
  <% end %>