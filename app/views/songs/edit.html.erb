<%= form_for(@song) do |f| %>
<% if @song.errors.any? %>
  <div class="error_explanation">
    <h2>There were a couple errors!</h2>

    <ul>
      <% @song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</div>

<div class="field">
  <%= f.label :artist_name %><br>
  <%= f.text_field :artist_name %>
</div>

<div class="field">
  <%= f.label :released %>
  <%= f.check_box :released %>
</div>

<div class="field">
  <%= f.label :release_year %><br>
  <%= f.text_field :release_year %>
</div>

<div class="field">
  <%= f.label :genre %>
  <%= f.text_field :genre %>
</div>

<div class="actions">
  <%= f.submit %>
</div>

<% end %>
