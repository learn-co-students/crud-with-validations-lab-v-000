<h2>Editing "<%= @song.title %>"</h2>
<%= form_for(@song) do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>
      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% if @song.errors[:title].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
    <%= f.label :title%>
    <%= f.text_field :title%>
  </div>
      
  <% if @song.errors[:released].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
    <%= f.label :released%>
    <%= f.check_box :released%>
  </div>

  <% if @song.errors[:release_year].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
    <%= f.label :release_year%>
    <%= f.text_field :release_year%>
  </div>

  <% if @song.errors[:artist_name].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
    <%= f.label :artist_name%>
    <%= f.text_field :artist_name%>
  </div>

  <div>
    <%= f.label :genre%>
    <%= f.text_field :genre%>
  </div>
  <%= f.submit %>
<% end %>