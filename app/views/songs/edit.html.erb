<h1>Editing <%= @song.title %> by <%= @song.artist_name %></h1>

<%= form_for @song do |f| %>
  <% if @song.errors.any? %>
    <h2>Errors:</h2>
    <% @song.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  <% end %>

  <%= f.label :title %><%= f.text_field :title %><br>
  <%= f.label :released %><%= f.check_box :released %><br>
  <%= f.label :release_year %><%= f.number_field :release_year %><br>
  <%= f.label :genre %><%= f.text_field :genre %><br>
  <%= f.label :artist_name %><%= f.text_field :artist_name %><br>
  <%= f.submit %>
  </div>
<% end %>