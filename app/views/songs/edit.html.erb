<%= form_for @song do |f| %>
<% if @song.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@song.errors.count, "error") %>
      prohibited this song from being saved:
    </h2>
    <ul>
      <% @song.errors.full_messages.each do |m| %>
        <li><%= m %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :released %>
  <%= f.check_box :released %>
  <%= f.label :release_year %>
  <%= f.number_field :release_year %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <%= f.label :genre %>
  <%= f.text_field :genre %>
  <%= f.submit %>
<% end %>
