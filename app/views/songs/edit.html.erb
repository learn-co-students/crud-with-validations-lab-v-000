<h1>Edit</h1>
<div id="form">
  <%= form_for(@song) do |f| %>
    <%= render partial: "errors_shared", locals: {object: @song} %>

    <%= f.text_field :title %>
    <%= f.check_box :released %>
    <%= f.text_field :release_year %>
    <%= f.text_field :artist_name %>
    <%= f.text_field :genre %>
    <%= f.submit %>

    <%= link_to "Delete Song", @song, method: :delete, data: { confirm: "You sure?" } %>
  <% end %>
</div>
