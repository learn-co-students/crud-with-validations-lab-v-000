<%= form_for @song do |f| %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :released %><br>
    <%= f.check_box :released %> <!-- will check checkbox if released returns true -->
  </div>
  <div class="field">
    <%= f.label :release_year %><br>
    <%= f.number_field :release_year %> <!-- added number firld -->
  </div>
  <div class="field">
    <%= f.label :genre %><br>
    <%= f.text_field :genre %>
  </div>
  <div class="field">
    <%= f.label :artist_name %><br>
    <%= f.text_field :artist_name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
