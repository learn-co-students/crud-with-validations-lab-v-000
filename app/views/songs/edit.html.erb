<h1>Edit Song</h1>

<%=form_for(@song) do |f|%>
  
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@song.errors.count, "error") %>
        prohibited this song from being saved:
      </h2>
      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%=f.label :title%>
  <%=f.text_field :title%><br>
  
  <%= f.label "Artist Name"%>
  <%=f.text_field :artist_name%><br>
  
  <%=f.label :genre%>
  <%=f.text_field :genre%><br>
  
  <%=f.label "Released?"%>
  <%=f.check_box :released%><br>

  <%=f.label "Release Year"%>
  <%=f.number_field :release_year%>

  <%=f.submit "Edit Song"%>
<%end%>