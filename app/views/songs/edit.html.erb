<h1>Editing <%= @song.title %></h1>

<%= form_for @song do |f| %>
    <%= f.label 'title' %><br>
    <%= f.text_field :title %><br>

    <%= f.label 'artist_name' %><br>
    <%= f.text_field :artist_name %><br>

    <%= f.label 'genre' %><br>
    <%= f.text_field :genre %><br>

    <h4>Song Officially Released?</h4>
    <%= f.label 'released?' %> 
    <%= f.check_box :released %> <br>
    
    <%= f.label 'release_year' %>
    <%= f.text_field :release_year %><br>

    <%= f.submit "Update Song" %>
<% end %>
