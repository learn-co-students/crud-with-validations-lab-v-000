<h2>Editing "<%= @song.title %>"</h2>

<% if @song.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@song.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>
 
    <ul>
    <% @song.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@song) do |f| %>
  <label>Song title:</label><br>
  <%= f.text_field :title %><br>
 
  <label>Song artist name</label><br>
  <%= f.text_field :artist_name %><br>

	<label>Song release year</label><br>	
  <%= f.text_field :release_year %><br>
 
	<label>Song released?</label><br>	
  <%= f.check_box :released %><br>
  
	<label>Song genre</label><br>	
  <%= f.text_field :genre %><br>
	
	<%= f.submit %>
<% end %>
