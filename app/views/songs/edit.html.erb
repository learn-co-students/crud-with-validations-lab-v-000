<%= form_for(@song) do |f| %>

<div class="field">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>

<div class="field">
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
</div>

<div class="field">
  <%= f.label :genre %>
  <%= f.text_field :genre %>
</div>

<div class="field">
  <%= f.label :released %>
  <%= f.check_box :released %>
</div>

<div class="field">
  <%= f.label :release_year %>
  <%= f.number_field :release_year %>
</div>

<div class="">
  <%= f.submit  %>
</div>

<%end %>
