<h1> Song Form (edit)</h1>
<% if @song.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@song.errors.count, "error") %></h2>
    <ul>
      <% @song.errors.full_messages.each do |msg|%>
        <li><%=msg%></li>
      <%end%>
    </ul>
  </div>
<% end %>

<%=form_for @song do |f| %>
  <label>title</label><%=f.text_field :title %><br>
  <label>released</label><%=f.check_box :released %><br>
  <label>release_year</label><%=f.text_field :release_year %><br>
  <label>artist_name</label><%=f.text_field :artist_name %><br>
  <label>genre</label><%=f.text_field :genre %><br>
  <%=f.submit%>
<% end %>
