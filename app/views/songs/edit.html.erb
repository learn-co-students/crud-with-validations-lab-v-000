<% if @song.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@song.errors.count, "error") %>
      prohibited this song from being saved:
    </h2>
 
    <ul>
    <% @song.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@song) do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
  </div>

  <div>
    <%= f.label :genre %>
    <%= f.text_field :genre %>
  </div>

  <div>
    <%= f.label :released %>
    <%= f.check_box :released %>
  </div>

  <div>
    <%= f.label :release_year %>
    <%= f.text_field :release_year %>
  </div>

  <div>
    <%= f.submit %><br><br>
    <%= link_to 'index', songs_path %>
  </div>

<% end %>