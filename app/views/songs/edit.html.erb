<h1>Edit Song</h1>

<%= form_for(@song) do |f| %>
  <%= f.label "Song title" %>
  <%= f.text_field :title %><br>
  <%= f.label "Artist name" %>
  <%= f.text_field :artist_name %><br>
  <%= f.label "Genre name" %>
  <%= f.text_field :genre %><br>
  <%= f.label "Released" %>
  <%= f.check_box :released %><br>
  <%= f.label "Release year" %>
  <%= f.text_field :release_year %><br>

  <%= f.submit %>
<% end %>