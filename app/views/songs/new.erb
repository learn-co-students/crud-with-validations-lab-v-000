<%= link_to "Songs", songs_path %>
<h1>Song Form</h1>
<%= form_for(@song) do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@song.errors.count, "error") %>
        prohibited this post from being saved:
      </h2>

      <ul>
        <% @song.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title %><br><br>

  <%= f.label :released %>
  <%= f.text_field :released %><br><br>

  <%= f.label :release_year %>
  <%= f.text_field :release_year %><br><br>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %><br><br>

  <%= f.label :genre %>
  <%= f.text_field :genre %><br><br>

  <%= f.submit "Create Song" %>
<% end %>
