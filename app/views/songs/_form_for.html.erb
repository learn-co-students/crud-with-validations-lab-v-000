<%= form_for(@song) do |f| %>

<% if @song.errors.any? %>
  <div class="error_explanation">
    <h2><%= pluralize(@song.errors.count, 'error') %>
      Prohibited from saving your file:
    </h2>
  <ul>
    <% @song.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  </ul>
    <% end %>
  </div>
<% end %>

  <%= f.label :title %><br>
  <%= f.text_field :title %><br><br>

  <%= f.label :released %>
  <%= f.check_box :released %><br><br>

  <%= f.label :release_year %>
  <%= f.number_field :release_year %><br><br>

  <%= f.label :artist_name %> <br>
  <%= f.text_field :artist_name %><br><br>

  <%= f.label :genre %><br>
  <%= f.text_field :genre %><br>

  <%= f.submit %>
<% end %>
