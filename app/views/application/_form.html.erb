<%= form_for(@song) do |f| %>
	<% if @song.errors.any? %>
		<div>
			<h2><%= pluralize(@song.errors.count, "error") %> "need attention."</h2>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :title %>
		<%= f.text_field :title %><br>
	</div>

	<div class="field">
		<%= f.label :released %>
		<%= f.check_box :released %><br>
	</div>

	<div class="field">
		<%= f.label :release_year %>
		<%= f.text_field :release_year %><br>
	</div>

	<div class="field">
		<%= f.label :artist_name %>
		<%= f.text_field :artist_name %><br>
	</div>

	<div class="field">
		<%= f.label :genre %>
		<%= f.text_field :genre %><br>
	</div>

<% end %>
