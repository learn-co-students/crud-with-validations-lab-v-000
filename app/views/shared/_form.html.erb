<% if @song.errors.any? %>
<h3>There were some errors:</h3>
  <ul>
  <% @song.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for(@song) do |f| %>
  <%= f.label :title %> <br>
  <%= f.text_field :title %> <br><br>
  <%= f.label :released, "Released?" %>
  <%= f.check_box :released %> <br><br>
  <%= f.label :release_year %> <br>
  <%= f.number_field :release_year %> <br><br>
  <%= f.label :artist_name %> <br>
  <%= f.text_field :artist_name %> <br><br>
  <%= f.label :genre %> <br>
  <%= f.text_field :genre %> <br><br>
  <%= f.submit %>
<% end %>